{
  "name": "kaget",
  "private": true,
  "version": "0.4.2",
  "type": "module",
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier -w -c \"**/*.{ts,tsx,md,mdx,js,jsx,json,yaml,yml,html,css}\"",
    "prepare": "husky",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "release-it": "^18.1.1",
    "turbo": "^2.6.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,mdx,js,jsx,json,yaml,yml,html,css}": "prettier -w"
  },
  "release-it": {
    "git": {
      "commitMessage": "release: v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "${version}",
      "autoGenerate": true,
      "web": true
    }
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "undici@>=6.0.0 <6.21.2": ">=6.21.2"
    }
  }
}
